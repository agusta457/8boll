    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Estado de los cursos (completados o no)
            const completedCourses = JSON.parse(localStorage.getItem('completedCourses')) || {};
            
            // Botón de reinicio
            const resetButton = document.getElementById('resetButton');
            resetButton.addEventListener('click', function() {
                if (confirm('¿Estás seguro de que deseas reiniciar todo tu progreso?')) {
                    localStorage.removeItem('completedCourses');
                    location.reload();
                }
            });
            
            // Función para verificar prerrequisitos
            function checkPrerequisites(courseElement) {
                const prerequisites = courseElement.getAttribute('data-prerequisites');
                if (!prerequisites) return true;
                
                const prereqIds = prerequisites.split(',').map(id => id.trim());
                return prereqIds.every(id => completedCourses[id] === true);
            }
            
            // Función para actualizar el estado de todos los cursos
            function updateAllCourses() {
                document.querySelectorAll('.course').forEach(course => {
                    const courseId = course.getAttribute('data-id');
                    
                    // Actualizar estado completado
                    if (completedCourses[courseId]) {
                        course.classList.add('completed');
                    } else {
                        course.classList.remove('completed');
                    }
                    
                    // Actualizar estado bloqueado
                    if (!completedCourses[courseId] && !checkPrerequisites(course)) {
                        course.classList.add('locked');
                    } else {
                        course.classList.remove('locked');
                    }
                });
            }
            
            // Manejar clic en los cursos
            document.querySelectorAll('.course').forEach(course => {
                course.addEventListener('click', function() {
                    // Ignorar cursos bloqueados
                    if (this.classList.contains('locked')) return;
                    
                    const courseId = this.getAttribute('data-id');
                    
                    // Alternar estado completado
                    completedCourses[courseId] = !completedCourses[courseId];
                    
                    // Guardar en localStorage
                    localStorage.setItem('completedCourses', JSON.stringify(completedCourses));
                    
                    // Actualizar interfaz
                    updateAllCourses();
                });
            });
            
            // Inicializar interfaz
            updateAllCourses();
        });
    </script>
